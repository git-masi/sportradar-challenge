{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "start docker containers",
      "type": "docker-compose",
      "dockerCompose": {
        "up": {
          "detached": true,
          "build": true
        },
        "files": ["${workspaceFolder}/docker-compose.yml"]
      }
    },
    {
      "label": "stop docker containers and remove local images and volumes",
      "type": "docker-compose",
      "dockerCompose": {
        "down": {
          "removeImages": "local",
          "removeVolumes": true
        },
        "files": ["${workspaceFolder}/docker-compose.yml"]
      }
    },
    {
      "label": "prisma:introspect",
      "type": "npm",
      "script": "prisma:introspect",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new",
        "showReuseMessage": false,
        "clear": false
      }
    },
    {
      "label": "prisma:generate",
      "type": "npm",
      "script": "prisma:generate",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new",
        "showReuseMessage": false,
        "clear": false
      }
    },
    {
      "label": "prisma:prisma",
      "dependsOn": ["prisma:introspect", "prisma:generate"],
      "dependsOrder": "sequence"
    },
    {
      "label": "initial ts build",
      "type": "shell",
      "command": "[ ! -f \"./dist/index.js\" ] && npm run build || echo \"initial ts build complete\"",
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "dev:build",
      "type": "npm",
      "script": "dev:build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new",
        "showReuseMessage": false,
        "clear": false
      }
    },
    {
      "label": "dev:run",
      "type": "npm",
      "script": "dev:run",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new",
        "showReuseMessage": false,
        "clear": false
      }
    },
    {
      "label": "dev:tasks",
      "dependsOn": ["dev:build", "dev:run"]
    },
    {
      "label": "dev",
      "dependsOn": ["initial ts build", "dev:tasks"],
      "dependsOrder": "sequence"
    }
  ]
}
